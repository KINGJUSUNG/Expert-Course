@charset "UTF-8";

.phwrap{ margin:40px 50px 0px 50px; padding:0px 0px 100px 0px; width:900px; font-size:13pt; }
.phwrap  ul > li {list-style: none; }



.phwrap > .pointHistory>.phTitle {border:0;border-bottom:1px solid rgb(158, 158, 158); border-top:1px solid rgb(158, 158, 158); width:700px; margin:0px 150px 0px 50px; height:20px; padding:10px 0px 10px 0px;}
.phwrap > .pointHistory>.phTitle > ul{margin:0; padding:0;}
.phwrap > .pointHistory>.phTitle > ul>li { float:left;}
.phwrap > .pointHistory>.phTitle > ul>li:first-child{width: 100px; margin:0px 0px 0px 30px;}
.phwrap > .pointHistory>.phTitle > ul>li:nth-child(2){width: 200px; margin:0px 0px 0px 10px;}
.phwrap > .pointHistory>.phTitle > ul>li:nth-child(3){width: 70px; margin:0px 0px 0px 10px; }
.phwrap > .pointHistory>.phTitle > ul>li:nth-child(4){width: 80px; margin:0px 0px 0px 20px; }
.phwrap > .pointHistory>.phTitle > ul>li:nth-child(5){width: 80px; margin:0px 0px 0px 20px;}

.phwrap > .pointHistory>.phTop{ margin:0px 0px 0px 310px; border:1px solid rgb(150, 150, 150); width: 135px; padding:5px 15px 0px 15px; border-bottom:0px; border-radius: 5px 5px 0px 0px ;}
.phwrap > .pointHistory>.phCont{width:700px; margin:0px 150px 0px 50px; border-bottom:4px double rgb(158, 158, 158); }
.phwrap > .pointHistory>.phCont > ul{ margin:0; padding:0; height:40px; width:700px; border-bottom:1px dashed rgb(158, 158, 158);  color:rgb(40, 40, 40); background-color:rgb(244, 244, 244);}
.phwrap > .pointHistory>.phCont > ul:hover,.ctwrap > .categorySurvey>.cateCont > ul:hover>li:nth-child(6)>button{ background-color:rgb(227, 227, 227);}
.phwrap > .pointHistory>.phCont > ul > li{float:left; padding: 10px 0px 5px 0px;}
.phwrap > .pointHistory>.phCont > ul>li:first-child{width: 100px; margin:0px 0px 0px 40px;}
.phwrap > .pointHistory>.phCont > ul>li:nth-child(2){width: 200px; margin:0px 0px 0px 10px;}
.phwrap > .pointHistory>.phCont > ul>li:nth-child(3){width: 70px; margin:0px 0px 0px 10px; }
.phwrap > .pointHistory>.phCont > ul>li:nth-child(4){width: 50px; margin:0px 0px 0px 20px; text-align: center;}
.phwrap > .pointHistory>.phCont > ul>li:nth-child(5){width: 80px; margin:0px 0px 0px 40px; }
.phwrap > .pointHistory>.phCont > ul>li:nth-child(6)>button{ font-size:11pt;padding:3px 0px 0px 0px; border:0px; background-color:rgb(244, 244, 244); color:black;}
.phwrap > .pointHistory>.phCont > ul>li:nth-child(6)>button:hover{ background-color:rgb(227, 227, 227); font-weight:bold; border-bottom:1px solid rgb(77, 77, 77); cursor:pointer;}

.phwrap > .pointHistory>.phCont > ul:last-child{border-bottom:0;}
.phwrap > .pointHistory>.phCont > ul > li:nth-child(2):hover>div{transform:translate3d(-100px,0,0); transition:transform 3s;}

.phwrap > .pointHistory>.phContBottom ul{padding:0; margin:5px; margin:10px 0px 0px 300px; }
.phwrap > .pointHistory>.phContBottom ul>li{float:left; margin:0px 5px 0px 0px; }
.phwrap > .pointHistory>.phContBottom ul>li>button { color:black; text-decoration: none;}
.phwrap > .pointHistory>.phContBottom ul>li>button:hover { font-weight:bold; cursor:pointer; margin:0px 5px 0px 0px; transition:margin .5s; }





